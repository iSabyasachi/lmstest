package com.lms.accesslibrary.dao;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.rest.core.annotation.RepositoryRestResource;

import com.lms.accesslibrary.bo.List;
import com.lms.accesslibrary.bo.Pageable;
import com.lms.accesslibrary.bo.Param;
import com.lms.accesslibrary.entity.library.book.BookItem;
import com.lms.accesslibrary.entity.library.user.User;

@RepositoryRestResource(collectionResourceRel = "bookItem", path = "book-borrowed")
public interface BookItemRepository extends JpaRepository<BookItem, String>{
	BookItem findByTrackingNumber(String barcode);
	
	List<BookItem> findByUserIdOrderByCreatedTSDesc(@Param("id") String id, Pageable pageable);

}
