package com.lms.accesslibrary.controller;

import java.util.Arrays;
import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import com.lms.accesslibrary.bean.BookItemBean;
import com.lms.accesslibrary.entity.library.book.BookItem;

@RestController
public class BooksController {
	
	@GetMapping("/books")
	public List<BookItemBean> getAllBooks() {
		return Arrays.asList(
				new BookItemBean(1l, "Mastering Spring 5.2", "Ranga Karanam"));
	}
}
