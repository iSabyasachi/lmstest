package com.lms.accesslibrary.bo;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.lms.accesslibrary.dao.BookRepository;
import com.lms.accesslibrary.entity.library.book.BookItem;

@Component
public class BookBO {
	
	@Autowired
	BookRepository bookRepository;
	
	public BookItem findByBarcode(String isbn) {
		return bookRepository.findByCategoryId(isbn);
	};

}
